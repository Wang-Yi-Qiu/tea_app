<!-- 个人中心页面 - 中国风雅致设计 -->
<view class="profile-container">
  <!-- 顶部装饰背景 -->
  <view class="top-decoration">
    <view class="decoration-pattern"></view>
  </view>

  <!-- 标题栏 -->
  <view class="header-bar">
    <view class="header-content">
      <text class="header-title">个人中心</text>
      <view class="settings-btn" bindtap="onSettingsTap">
        <text class="iconfont icon-settings"></text>
      </view>
    </view>
  </view>

  <!-- 用户信息卡片 -->
  <view class="profile-card">
    <view class="card-background">
      <view class="ink-splash"></view>
    </view>

    <view class="profile-content">
      <!-- 用户头像 -->
      <view class="avatar-container">
        <image
          class="user-avatar"
          src="https://via.placeholder.com/120x120/ee4b2b/ffffff?text=茶"
          mode="aspectFill"
        />
        <view class="avatar-border"></view>
      </view>

      <!-- 用户信息 -->
      <view class="user-info">
        <text class="username">清风徐来</text>
        <text class="user-desc">品茶论道 • 雅致生活</text>
        <view class="user-stats">
          <view class="stat-item">
            <text class="stat-number">128</text>
            <text class="stat-label">关注</text>
          </view>
          <view class="stat-divider"></view>
          <view class="stat-item">
            <text class="stat-number">256</text>
            <text class="stat-label">粉丝</text>
          </view>
          <view class="stat-divider"></view>
          <view class="stat-item">
            <text class="stat-number">42</text>
            <text class="stat-label">收藏</text>
          </view>
        </view>
      </view>

      <!-- 编辑资料按钮 -->
      <view class="edit-profile-btn" bindtap="onEditProfile">
        <text class="edit-btn-text">编辑资料</text>
        <text class="iconfont icon-arrow-right"></text>
      </view>
    </view>
  </view>

  <!-- 会员卡片 -->
  <view class="vip-card">
    <view class="vip-background">
      <view class="vip-pattern"></view>
    </view>
    <view class="vip-content">
      <view class="vip-info">
        <text class="vip-title">茶叶雅士</text>
        <text class="vip-desc">专属优惠 • 品质服务</text>
      </view>
      <view class="vip-badge">
        <text class="vip-badge-text">VIP</text>
      </view>
    </view>
  </view>

  <!-- 功能菜单列表 -->
  <view class="menu-section">
    <!-- 我的订单 -->
    <view class="menu-item order-item" bindtap="onOrdersTap">
      <view class="menu-left">
        <view class="menu-icon order-icon">
          <text class="iconfont icon-order"></text>
        </view>
        <text class="menu-title">我的订单</text>
      </view>
      <view class="menu-right">
        <view class="order-status">
          <view class="status-dot"></view>
          <text class="status-text">待收货 2</text>
        </view>
        <text class="iconfont icon-arrow-right"></text>
      </view>
    </view>

    <!-- 我的收藏 -->
    <view class="menu-item" bindtap="onFavoritesTap">
      <view class="menu-left">
        <view class="menu-icon favorite-icon">
          <text class="iconfont icon-favorite"></text>
        </view>
        <text class="menu-title">我的收藏</text>
      </view>
      <view class="menu-right">
        <text class="menu-count">18</text>
        <text class="iconfont icon-arrow-right"></text>
      </view>
    </view>

    <!-- 地址管理 -->
    <view class="menu-item" bindtap="onAddressTap">
      <view class="menu-left">
        <view class="menu-icon address-icon">
          <text class="iconfont icon-location"></text>
        </view>
        <text class="menu-title">地址管理</text>
      </view>
      <view class="menu-right">
        <text class="iconfont icon-arrow-right"></text>
      </view>
    </view>

    <!-- 邀请有礼 -->
    <view class="menu-item" bindtap="onInviteTap">
      <view class="menu-left">
        <view class="menu-icon invite-icon">
          <text class="iconfont icon-gift"></text>
        </view>
        <text class="menu-title">邀请有礼</text>
      </view>
      <view class="menu-right">
        <view class="invite-badge">新</view>
        <text class="iconfont icon-arrow-right"></text>
      </view>
    </view>

    <!-- 帮助中心 -->
    <view class="menu-item" bindtap="onHelpTap">
      <view class="menu-left">
        <view class="menu-icon help-icon">
          <text class="iconfont icon-help"></text>
        </view>
        <text class="menu-title">帮助中心</text>
      </view>
      <view class="menu-right">
        <text class="iconfont icon-arrow-right"></text>
      </view>
    </view>

    <!-- 联系客服 -->
    <view class="menu-item contact-item" bindtap="onContactTap">
      <view class="menu-left">
        <view class="menu-icon contact-icon">
          <text class="iconfont icon-service"></text>
        </view>
        <text class="menu-title">联系客服</text>
      </view>
      <view class="menu-right">
        <view class="contact-status">在线</view>
        <text class="iconfont icon-arrow-right"></text>
      </view>
    </view>
  </view>

  <!-- 底部装饰 -->
  <view class="bottom-decoration">
    <view class="seal-pattern">
      <text class="seal-text">茶韵</text>
    </view>
  </view>
</view>