/* 个人中心页面样式 - 中国风雅致设计 */
@import "./iconfont.wxss";
page {
  background: linear-gradient(180deg, #f8f6f0 0%, #faf8f3 100%);
  font-family: 'Noto Sans SC', 'PingFang SC', 'Hiragino Sans GB', sans-serif;
}

.profile-container {
  position: relative;
  min-height: 100vh;
  overflow: hidden;
}

/* 顶部装饰背景 */
.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 320rpx;
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 50%, #CD853F 100%);
  border-radius: 0 0 60rpx 60rpx;
  overflow: hidden;
}

.decoration-pattern {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    repeating-linear-gradient(45deg, transparent, transparent 20rpx, rgba(255, 255, 255, 0.03) 20rpx, rgba(255, 255, 255, 0.03) 40rpx),
    repeating-linear-gradient(-45deg, transparent, transparent 20rpx, rgba(255, 255, 255, 0.03) 20rpx, rgba(255, 255, 255, 0.03) 40rpx);
  opacity: 0.6;
}

/* 應题栏 */
.header-bar {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 60rpx 40rpx 20rpx;
  z-index: 10;
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.header-title {
  font-size: 44rpx;
  font-weight: 600;
  color: #ffffff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  letter-spacing: 2rpx;
}

.settings-btn {
  padding: 16rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
}

.icon-settings {
  font-size: 36rpx;
  color: #ffffff;
}

/* 用户信息卡片 */
.profile-card {
  position: relative;
  margin: -40rpx 40rpx 40rpx;
  background: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 40rpx rgba(139, 69, 19, 0.08);
  overflow: hidden;
  z-index: 5;
}

.card-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #ffffff 0%, #faf8f3 100%);
}

.ink-splash {
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 300rpx;
  height: 300rpx;
  background: radial-gradient(circle, rgba(139, 69, 19, 0.05) 0%, transparent 70%);
  border-radius: 50%;
}

.profile-content {
  position: relative;
  padding: 60rpx 40rpx 50rpx;
  text-align: center;
}

.avatar-container {
  position: relative;
  display: inline-block;
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.9);
  box-shadow: 0 8rpx 32rpx rgba(139, 69, 19, 0.15);
}

.avatar-border {
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  right: -4rpx;
  bottom: -4rpx;
  border: 2rpx solid #D2691E;
  border-radius: 50%;
  opacity: 0.6;
}

.user-info {
  margin-bottom: 40rpx;
}

.username {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #2a1b18;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.user-desc {
  font-size: 28rpx;
  color: #8B7355;
  line-height: 1.4;
}

.user-stats {
  display: flex;
  justify-content: center;
  margin: 40rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 600;
  color: #8B4513;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #8B7355;
}

.stat-divider {
  width: 2rpx;
  height: 40rpx;
  background: rgba(139, 115, 85, 0.2);
  margin: 0 40rpx;
}

.edit-profile-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx 40rpx;
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
  border-radius: 100rpx;
  box-shadow: 0 6rpx 20rpx rgba(139, 69, 19, 0.2);
}

.edit-btn-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 会员卡片 */
.vip-card {
  position: relative;
  margin: 0 40rpx 40rpx;
  background: linear-gradient(135deg, #8B4513 0%, #CD853F 100%);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 30rpx rgba(139, 69, 19, 0.15);
}

.vip-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.vip-pattern {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    repeating-linear-gradient(45deg, transparent, transparent 30rpx, rgba(255, 255, 255, 0.05) 30rpx, rgba(255, 255, 255, 0.05) 60rpx);
}

.vip-content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 40rpx;
}

.vip-info {
  flex: 1;
}

.vip-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.vip-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.vip-badge {
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 100rpx;
  backdrop-filter: blur(10rpx);
}

.vip-badge-text {
  font-size: 22rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 1rpx;
}

/* 功能菜单列表 */
.menu-section {
  margin: 0 40rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 0;
  border-bottom: 1rpx solid rgba(139, 115, 85, 0.08);
  transition: background 0.2s ease;
}

.menu-item:active {
  background: rgba(139, 69, 19, 0.03);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #ffffff;
}

.order-icon {
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
}

.favorite-icon {
  background: linear-gradient(135deg, #DC143C 0%, #B22222 100%);
}

.address-icon {
  background: linear-gradient(135deg, #2E8B57 0%, #3CB371 100%);
}

.invite-icon {
  background: linear-gradient(135deg, #FF8C00 0%, #FF6347 100%);
}

.help-icon {
  background: linear-gradient(135deg, #4682B4 0%, #5F9EA0 100%);
}

.contact-icon {
  background: linear-gradient(135deg, #8B008B 0%, #9932CC 100%);
}

.menu-title {
  font-size: 32rpx;
  color: #2a1b18;
  font-weight: 500;
}

.menu-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.menu-count {
  font-size: 28rpx;
  color: #8B7355;
  background: rgba(139, 115, 85, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 100rpx;
  min-width: 48rpx;
  text-align: center;
}

.icon-arrow-right {
  font-size: 28rpx;
  color: #a89995;
}

/* 订单特殊样式 */
.order-item {
  padding: 40rpx 0;
}

.order-status {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  background: #FF6347;
  border-radius: 50%;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.status-text {
  font-size: 26rpx;
  color: #FF6347;
  font-weight: 500;
}

/* 邀请样式 */
.invite-badge {
  padding: 6rpx 12rpx;
  background: #FF6347;
  color: #ffffff;
  font-size: 20rpx;
  border-radius: 100rpx;
  font-weight: 500;
  line-height: 1;
}

/* 联系客服特殊样式 */
.contact-item {
  padding: 40rpx 0;
}

.contact-status {
  padding: 8rpx 16rpx;
  background: rgba(46, 139, 69, 0.1);
  color: #2E8B57;
  font-size: 22rpx;
  border-radius: 100rpx;
  font-weight: 500;
  position: relative;
}

.contact-status::before {
  content: '';
  position: absolute;
  right: 8rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 8rpx;
  background: #2E8B57;
  border-radius: 50%;
  animation: pulse 2s infinite;
}

/* 底部装饰 */
.bottom-decoration {
  margin: 60rpx 40rpx 0;
  padding: 40rpx 0;
  text-align: center;
}

.seal-pattern {
  display: inline-block;
  padding: 30rpx;
  border: 4rpx solid #8B4513;
  border-radius: 50%;
  background: rgba(139, 69, 19, 0.05);
  position: relative;
}

.seal-pattern::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(-15deg);
  width: 120%;
  height: 120%;
  border: 2rpx dashed rgba(139, 69, 19, 0.3);
  border-radius: 50%;
}

.seal-text {
  font-size: 28rpx;
  color: #8B4513;
  font-weight: 600;
  letter-spacing: 8rpx;
  writing-mode: vertical-rl;
  text-orientation: upright;
}

/* 响应式优化 */
@media (max-width: 375px) {
  .profile-card {
    margin: -30rpx 30rpx 30rpx;
  }

  .vip-card {
    margin: 0 30rpx 30rpx;
  }

  .menu-section {
    margin: 0 30rpx;
  }

  .header-bar {
    padding: 50rpx 30rpx 20rpx;
  }

  .profile-content {
    padding: 50rpx 30rpx 40rpx;
  }
}