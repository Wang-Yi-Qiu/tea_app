/* pages/profile/profile.wxss */

.profile-container {
  min-height: 100vh;
  background-color: #f8f6f6;
  display: flex;
  flex-direction: column;
  font-family: 'Noto Sans SC', sans-serif;
}

/* Top App Bar */
.app-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 16rpx;
  background-color: #f8f6f6;
}

.app-bar-left {
  width: 96rpx;
}

.app-bar-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1.2;
  letter-spacing: -0.015em;
  color: #2a1b18;
}

.app-bar-right {
  width: 96rpx;
  display: flex;
  justify-content: flex-end;
}

.settings-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 96rpx;
  height: 96rpx;
  background-color: transparent;
}

/* Profile Header */
.profile-header {
  padding: 32rpx;
  margin-top: 32rpx;
}

.profile-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

.avatar-container {
  position: relative;
}

.avatar {
  width: 192rpx;
  height: 192rpx;
  border-radius: 50%;
  border: 8rpx solid #e5dcd9;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.username {
  font-size: 44rpx;
  font-weight: bold;
  line-height: 1.2;
  letter-spacing: -0.015em;
  color: #2a1b18;
  text-align: center;
}

.user-desc {
  margin-top: 16rpx;
  font-size: 32rpx;
  font-weight: normal;
  line-height: 1.5;
  color: #6e5a55;
  text-align: center;
}

/* Spacer */
.spacer {
  height: 64rpx;
}

/* List Items Section */
.list-section {
  display: flex;
  flex-direction: column;
  padding: 0 32rpx;
  gap: 16rpx;
}

.list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 32rpx;
  background-color: transparent;
  padding: 24rpx 32rpx;
  min-height: 112rpx;
  border-radius: 16rpx;
  border: 2rpx solid #e5dcd9;
}

.item-left {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.item-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  background-color: #efe6e4;
  color: #2a1b18;
  flex-shrink: 0;
}

.item-text {
  flex: 1;
  font-size: 32rpx;
  font-weight: normal;
  line-height: 1.5;
  color: #2a1b18;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-right {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 56rpx;
  height: 56rpx;
  color: #6e5a55;
}

.iconfont {
  font-size: 48rpx;
  /* 使用小程序内置图标或者emoji作为备用 */
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.arrow {
  font-size: 28rpx;
}