/* pages/user/profile/index.wxss - 重新设计的个人中心样式 */

/* 全局样式 */
page {
  background: linear-gradient(180deg, #f8f6f0 0%, #faf8f3 100%);
  font-family: 'Noto Sans SC', 'PingFang SC', 'Hiragino Sans GB', sans-serif;
  line-height: 1.6;
}

/* 主容器 */
.profile-container {
  position: relative;
  min-height: 100vh;
  overflow: hidden;
}

/* 顶部装饰区域 */
.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 280rpx;
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 50%, #CD853F 100%);
  border-radius: 0 0 60rpx 60rpx;
  overflow: hidden;
}

.decoration-pattern {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    repeating-linear-gradient(45deg, transparent, transparent 20rpx, rgba(255, 255, 255, 0.05) 20rpx, rgba(255, 255, 255, 0.05) 40rpx),
    repeating-linear-gradient(-45deg, transparent, transparent 20rpx, rgba(255, 255, 255, 0.05) 20rpx, rgba(255, 255, 255, 0.05) 40rpx);
  opacity: 0.6;
}

/* 用户信息卡片 */
.profile-card {
  position: relative;
  margin: -40rpx 30rpx 30rpx;
  background: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 40rpx rgba(139, 69, 19, 0.08);
  overflow: hidden;
  z-index: 5;
}

.card-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #ffffff 0%, #faf8f3 100%);
}

.ink-splash {
  position: absolute;
  top: -80rpx;
  right: -80rpx;
  width: 240rpx;
  height: 240rpx;
  background: radial-gradient(circle, rgba(139, 69, 19, 0.08) 0%, transparent 70%);
  border-radius: 50%;
}

.profile-content {
  position: relative;
  padding: 60rpx 30rpx 50rpx;
  text-align: center;
}

/* 用户头像 */
.avatar-container {
  position: relative;
  display: inline-block;
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.9);
  box-shadow: 0 8rpx 32rpx rgba(139, 69, 19, 0.15);
}

.avatar-glow {
  position: absolute;
  top: -8rpx;
  left: -8rpx;
  right: -8rpx;
  bottom: -8rpx;
  border: 2rpx solid rgba(139, 69, 19, 0.2);
  border-radius: 50%;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 0.6; }
  50% { opacity: 1; }
}

/* 用户基本信息 */
.user-main-info {
  margin-bottom: 40rpx;
}

.user-name {
  font-size: 48rpx;
  font-weight: 600;
  color: #2a1b18;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.user-title {
  font-size: 28rpx;
  color: #8B7355;
  line-height: 1.4;
  margin-bottom: 30rpx;
}

.member-badge {
  display: inline-flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 32rpx;
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
  border-radius: 100rpx;
  box-shadow: 0 6rpx 20rpx rgba(139, 69, 19, 0.2);
}

.member-level {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 1rpx;
}

.member-benefit {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-left: 8rpx;
}

/* 用户统计 */
.user-stats {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #8B4513;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #8B7355;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(139, 115, 85, 0.15);
}

/* 会员权益展示 */
.benefits-section {
  margin: 0 30rpx 30rpx;
}

.section-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2a1b18;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #8B7355;
  opacity: 0.8;
}

.benefits-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.benefit-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8f6f0 100%);
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  border: 2rpx solid rgba(139, 69, 19, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  transition: all 0.3s ease;
}

.benefit-card:active {
  transform: translateY(-6rpx);
  box-shadow: 0 12rpx 30rpx rgba(139, 69, 19, 0.12);
}

.benefit-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
  margin-bottom: 16rpx;
  position: relative;
}

.benefit-icon::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120%;
  height: 120%;
  border: 1rpx dashed rgba(139, 69, 19, 0.3);
  border-radius: 20rpx;
}

.benefit-name {
  font-size: 24rpx;
  color: #2a1b18;
  font-weight: 500;
  line-height: 1.3;
}

/* 功能入口 */
.functions-section {
  margin: 0 30rpx 60rpx;
}

.function-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.function-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
}

.function-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(139, 69, 19, 0.1);
  border-color: rgba(139, 69, 19, 0.1);
}

.function-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #ffffff;
  margin-bottom: 16rpx;
  position: relative;
}

/* 不同功能项的颜色主题 */
.order-icon {
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
}

.points-icon {
  background: linear-gradient(135deg, #FFD700 0%, #FFA000 100%);
}

.address-icon {
  background: linear-gradient(135deg, #2E8B57 0%, #3CB371 100%);
}

.favorite-icon {
  background: linear-gradient(135deg, #DC143C 0%, #B22222 100%);
}

.coupon-icon {
  background: linear-gradient(135deg, #8B7355 0%, #6C757D 100%);
}

.service-icon {
  background: linear-gradient(135deg, #8B008B 0%, #9932CC 100%);
}

.help-icon {
  background: linear-gradient(135deg, #4682B4 0%, #5F9EA0 100%);
}

.settings-icon {
  background: linear-gradient(135deg, #6C757D 0%, #95A5A6 100%);
}

.icon-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 36rpx;
  height: 36rpx;
  background: #8B7355;
  color: #ffffff;
  border-radius: 18rpx;
  font-size: 20rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.3);
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-4rpx); }
}

.service-status {
  position: absolute;
  bottom: -6rpx;
  right: -6rpx;
  width: 12rpx;
  height: 12rpx;
  background: #2E8B57;
  border-radius: 50%;
  border: 2rpx solid #ffffff;
  animation: pulse 2s infinite;
}

.function-name {
  font-size: 26rpx;
  color: #2a1b18;
  font-weight: 500;
  margin-bottom: 12rpx;
  line-height: 1.2;
}

.function-arrow {
  width: 20rpx;
  height: 20rpx;
  border-right: 3rpx solid #a89995;
  border-bottom: 3rpx solid #a89995;
  transform: rotate(-45deg);
  margin-top: auto;
  opacity: 0.6;
}

/* 底部装饰 */
.footer-decoration {
  margin: 60rpx 30rpx 0;
  padding: 40rpx 0;
  text-align: center;
}

.tea-leaf-decoration {
  display: inline-block;
  padding: 24rpx 32rpx;
  border: 3rpx solid #8B4513;
  border-radius: 50%;
  background: rgba(139, 69, 19, 0.05);
  position: relative;
  font-size: 28rpx;
  color: #8B4513;
  font-weight: 600;
  letter-spacing: 4rpx;
}

.tea-leaf-decoration::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(-15deg);
  width: 140%;
  height: 140%;
  border: 2rpx dashed rgba(139, 69, 19, 0.2);
  border-radius: 50%;
}

/* 图标字体 */
.iconfont {
  font-family: "Apple Color Emoji", "Segoe UI Emoji", "Noto Color Emoji", sans-serif;
  font-style: normal;
  font-weight: normal;
  line-height: 1;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .profile-card {
    margin: -30rpx 20rpx 20rpx;
  }

  .benefits-section,
  .functions-section {
    margin: 0 20rpx 40rpx;
  }

  .function-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
  }

  .benefits-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .profile-content {
    padding: 40rpx 20rpx 30rpx;
  }

  .user-stats {
    flex-direction: column;
    gap: 16rpx;
  }
}

/* 交互动画 */
.function-item {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2);
}

.function-item:active {
  transform: translateY(-4rpx) scale(1.02);
}

/* 阴影效果 */
.profile-card {
  box-shadow:
    0 4rpx 20rpx rgba(139, 69, 19, 0.06),
    0 8rpx 40rpx rgba(139, 69, 19, 0.04),
    0 16rpx 60rpx rgba(139, 69, 19, 0.02);
}

.benefit-card {
  box-shadow:
    0 2rpx 8rpx rgba(139, 69, 19, 0.04),
    0 4rpx 16rpx rgba(139, 69, 19, 0.02);
}

/* 无障碍优化 */
.function-item:focus-within {
  outline: 3rpx solid #8B4513;
  outline-offset: 6rpx;
}